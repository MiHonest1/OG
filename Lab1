#include <iostream>
#include <ctime>
#include <malloc.h>
#include <string>
#include <windows.h>

using namespace std;

int Mass1[10], Max, Min;                    //Задание 1
int Mass2[10];                              //Задание 2
int n, * p = NULL;                           //Задание 3
int Mass3[10][10], x = 10, y = 10, Sum = 0; //Задание 4

struct student {                            //Задание 5
    string Name, Surname, Group;
    int Curse, TicketNum;
} StudentList[5], StudentText;

int choose;

int main() {

    setlocale(LC_ALL, "Russian");
    srand(time(0));

    //Задание 1//

    cout << "Генерируемый массив: ";

    for (int i = 0; i < 10; i++) {
        Mass1[i] = 1 + rand() % 100;
        cout << Mass1[i] << " ";

        if (i == 0) { Max = Mass1[i]; Min = Mass1[i]; }
        else if (Max < Mass1[i]) { Max = Mass1[i]; }
        else if (Min > Mass1[i]) { Min = Mass1[i]; }
    }

    cout << "\nМаксимум: " << Max << endl;
    cout << "Минимум: " << Min << endl;
    cout << "Разница между максимумом и минимумом: " << Max - Min << endl;

    ////

    //Задание 2//

    cout << "\nГенерируемый массив: ";
    for (int i = 0; i < 10; i++) {
        Mass1[i] = 1 + rand() % 100;
        cout << Mass1[i] << " ";
    }
    cout << endl;

    ////

    //Задание 3//

    cout << "\nВведите размерность массива: ";
    cin >> n;
    cout << "Массив: ";
    p = (int*)calloc(n, 2);
    for (int i = 0; i < n; i++) {
        *(p + i) = 1 + rand() % 100;
        cout << *(p + i) << " ";
    }

    ////

    //Задание 4//

    cout << "\n\n";

    for (int i = 0; i < x; i++) {
        for (int h = 0; h < y; h++) {
            Mass3[i][h] = 1 + rand() % 100;
        }
    }

    for (int i = 0; i < x; i++) {
        Sum = 0;
        cout << "Строка " << i << ": ";
        for (int h = 0; h < y; h++) {
            Sum += Mass3[i][h];
            cout << Mass3[i][h] << " ";
        }
        cout << endl;
        cout << "Сумма строки " << i << ": " << Sum << endl;
    }

    ////
    return 0;
    }
